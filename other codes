SELECT orders.order_id, orders.product_name, orders.purchase_date, orders.warranty_start_date, orders.warranty_end_date, 
               amc_details.amc_number,amc_details.amc_start_date, amc_details.amc_end_date 
        FROM orders 
        LEFT JOIN amc_details ON orders.order_id = amc_details.order_id;

